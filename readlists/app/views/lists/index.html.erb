<p id="notice"><%= notice %></p>

<h1>Lists</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Author</th>
      <th>Articles<th>
      <th colspan="5"></th>
    </tr>
  </thead>

  <tbody>
    <% @lists.each do |list| %>
      <tr>
        <td><%= list.title %></td>
        <td><%= list.description %></td>
        <td><%= list.author %></td>
        <td><%= list.articles.size %></td>
        <td><%= link_to 'Show', list %></td>
        <td><%= link_to 'Edit', edit_list_path(list) %></td>
        <td><%= link_to 'Destroy', list, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to 'Download as epub', list_path(list, format: :epub)  %></td>
        <td><%= link_to 'Download as mobi', list_path(list, format: :mobi)  %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

